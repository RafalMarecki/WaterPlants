<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/watering_linearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <TextView
        android:id="@+id/fertilizing_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textSize="20sp"
        android:textColor="@color/not_quite_black"
        android:shadowColor="@color/ligt_grey"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textStyle="italic"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/fertilizing_cardview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp"
        android:elevation="10dp">
        <RelativeLayout
            android:id="@+id/fertilizing_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/fertilizing_image_cardview"
                android:orientation="vertical"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/fertilizing_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/plants2"
                    android:background="@color/white"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fertilizing_rigt_pannel_cardview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/fertilizing_image_cardview"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardCornerRadius="20dp">

                <android.widget.Button
                    android:id="@+id/fertilizing_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_water_button"
                    android:focusable="false"
                    android:shadowColor="#454545"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="@string/fertilize"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>