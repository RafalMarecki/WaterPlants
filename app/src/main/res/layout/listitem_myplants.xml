<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plant_cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/plant_image_cardview"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plants"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/plant_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="@color/not_quite_black"
            android:textSize="20sp"
            android:shadowColor="@color/ligt_grey"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_toRightOf="@id/plant_image_cardview"
            android:layout_alignBottom="@id/plant_image_cardview"
            android:layout_alignTop="@id/plant_image_cardview"
            android:textStyle="italic"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>