<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_delete_plant_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/delete_confirm"
            android:textSize="16sp"
            android:textColor="@color/not_quite_black"
            android:shadowColor="@color/ligt_grey"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <android.widget.Button
                android:layout_marginRight="6dp"
                android:id="@+id/yes_button"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_water_button"
                android:text="@string/yes"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:shadowColor="#454545"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:id="@+id/no_button"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_delete_button"
                android:text="@string/no"
                android:textColor="#FFFFFF"
                android:shadowColor="#454545"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>